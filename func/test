<?php
function t1(){
	if(rand(1,10)>5){
		throw new Exception("1输了", 1);
	}else{
		return t2();
	}
}

function t2(){
	if(rand(1,10)>5){
		throw new Exception("2报错", 1);
	}else{
		return t3();
	}
}

function t3(){
	if(rand(1,10)>5){
		throw new Exception("3报错", 1);
	}else{
		return 'ok';
	}
}

try {
	var_dump(t1());
} catch (Exception $e) {
	echo '文件:',$e->getFile(),'<br />';
	echo '行:',$e->getLine(),'<br />';
	echo '信息',$e->getMessage(),'<br />';
}

?>
